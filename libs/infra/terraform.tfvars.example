# Judge0 on Azure - Example Configuration
# Copy this file to terraform.tfvars and fill in your values

# Database Configuration (Required)
postgres_host     = "your-postgres-host.example.com"
postgres_port     = "5432"
postgres_db       = "judge0"
postgres_user     = "judge0"
postgres_password = "your-secure-database-password"

# Redis Configuration (Required)
redis_host     = "your-redis-host.example.com"
redis_port     = "6379"
redis_password = "your-secure-redis-password"

# General Configuration (Optional - defaults provided)
location            = "East US"
resource_group_name = "judge0-rg"
judge0_image_tag    = "1.13.1"

# Scaling Configuration (Optional - defaults provided)
max_workers = 10
max_servers = 5

# Security Configuration (Optional)
auth_token = "your-optional-api-token"

